<div class="page-header">
  <h3>Encounter #<%= @encounter.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Person</dt>
      <dd><%= @encounter.person.full_name %></dd>

      <dt>Event</dt>
      <dd><%= @encounter.event.event_name %></dd>

      <dt>Date</dt>
      <dd><%= @encounter.event.date %></dd>

      <dt>Thankyouletter sent</dt>
      <% if @encounter.thankyouletter_sent == true %>
      <dd>Yes</dd>
      <% else %>
      <dd>No</dd>
      <% end %>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/encounters" class="btn btn-primary">
        Back
      </a>
      <a href="/encounters/<%= @encounter.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_encounter/<%= @encounter.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
